{
  "manifest_version": 2,
  "name": "Emacs-keybinding",
  "description": "An addon for using Firefox with Emacs keybinding",
  "version": "0.1.2",

  "homepage_url": "https://github.com/kaiwk/emacs-keybinding",
  "author": "Wang Kai",

  "browser_specific_settings": {
    "gecko": {
      "id": "{92800b1f-88a5-490c-8903-e230447fcb5d}"
    }
  },

  "permissions": [
      "tabs",
      "activeTab",
      "storage"
  ],

  "icons": {
    "48": "icons/emacs-48.png",
    "96": "icons/emacs-96.png"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches" : ["<all_urls>"],
      "js": ["keybindings.js"]
    }
  ]
}
